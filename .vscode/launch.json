  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug con nodemon",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nodemon",
        "--watch",
        "src",
        "--ext",
        "ts",
        "--exec",
        "ts-node",
        "${workspaceFolder}/src/server.ts"
      ],
      "env": {
        "NODE_ENV": "dev"
      },
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
